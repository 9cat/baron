<!doctype html>
<html>
<head>
  <title>Basic Pay</title>
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet">
</head>
<body>
  <div class="container">

    <!-- header -->
    <div class="row underline">
      <div class="col-md-12">
        <h1>Basic Pay</h1>
      </div>
    </div>

  <!-- Invoice Info -->
  <div class="row spacer helvetica-text">
    <div class="col-xs-12">
      Invoice <span class="green"> <%= _id %></span><br />
      <% line_items.forEach(function(item){ %>
        <span>
          <%= item.description %>.........<%= item.quantity %>.....<%= item.amount %> 
          <% if (currency === "USD") { %>
            USD
          <% } else { %>
            BTC
          <% } %>
        </span> 
        <br />
      <% }); %>
      <br />
      Total Amount <%= total_amount %> 
      <% if (currency === "USD") { %>
        USD
      <% } else { %>
        BTC
      <% } %>
      <form method="POST" action="/pay/<%= _id %>">
      <div class="form-group">
        <button type="submit" class="btn btn-lg btn-default">Pay Now</button>
      </div>
    </form>
    </div>
  </div>
</body>
</html>
